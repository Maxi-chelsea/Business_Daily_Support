<head>
  <meta charset="utf-8">
  <%= javascript_include_tag 'application' %>
</head>

<body>
  <div class="container">
  <div class="row">
    <div class="col">
      <h2>新規企業ページ作成</h2>
      <form>
      <%= form_with model: @campany do |f| %>
        <div class="form-group row">
          <label class="col-sm-2 col-form-label">会社名</label>
          <div class="col-sm-10">
            <%= f.text_field :name, class: "form-control", placeholder: "会社名"%>
          </div>
        </div>
        <div class="form-group row">
          <label for="inputCode" class="col-sm-2 col-form-label">企業コード</label>
          <div class="col-sm-10">
            <%= f.text_field :code, class: 'form-control', id: 'password' %>
            <%= button_tag '企業コードを生成する', id: 'auto-fill-link', type: "button" %>
          </div>
        </div>
        <%= f.submit "作成する" %>


      <% end %>
      </form>
      </table>
    </div>
  </div>
</div>


<script>
  $(function(){
    autoFill();
    function autoFill() {
      $('#auto-fill-link').click(function(){
        $('#password').val("<%= @password %>");
      });
    }
  })
</script>
</body>




