<div class="container">
  <div class="row">
    <div class="col mt-5 mb-5 pb-5">
      <h2>ログイン</h2>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field mt-3 p-2">
          <%= f.label :email, "Eメール" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>

        <div class="field mt-3 p-2">
          <%= f.label :password, "パスワード" %><br />
          <%= f.password_field :password, autocomplete: "current-password" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field mt-3 p-2">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me, "パスワードを保持する" %>
          </div>
        <% end %>

        <div class="actions mt-3 mb-3 pb-4">
          <%= f.submit "ログイン" %>
        </div>
      <% end %>
      <div class="mb-5"></div>
      <%= render "devise/shared/links" %>
      <div class="mb-5"></div>
      <div class="mb-5 pb-5">
        <%= link_to "Topページへ戻る", root_path, class: 'text-dark' %>
      </div>
      <div class="mb-5"><p> </p></div>
    </div>
  </div>
</div>









