<body class="bg-secondary">
  <div class="container">
    <div class="row">
      <div class="col mt-5 mb-5 pb-5">
        <h2>新規登録</h2>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
          <div class="field mt-3">
            <%= f.label :name, "名前" %><br />
            <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
          </div>

          <div class="field mt-3">
            <%= f.label :email, "Eメール" %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
          </div>

          <div class="field mt-3">
            <%= f.label :password, "パスワード" %>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> 文字以上)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "new-password" %>
          </div>

          <div class="field mt-3">
            <%= f.label :password_confirmation ,"パスワード(確認用)" %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
          </div>

          <div class="field mt-3">
            <%= f.label :admin, "管理者権限" %><br />
              <%= f.radio_button :admin, :true %>
              <%= f.label :admin, "有効", {value: :true, style: "display: inline-block;"} %>
              <%= f.radio_button :admin, :"false", {:checked => true} %>
              <%= f.label :admin, "無効", {value: :false, style: "display: inline-block;"} %>
          </div>

          <div class="actions mt-3 mb-3">
            <%= f.submit "新規登録" %>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>
        <div class="mb-5"></div>
        <div class="mb-5">
          <%= link_to "Topページへ戻る", root_path, class: 'text-dark' %>
        </div>
      </div>
    </div>
  </div>
</body>















